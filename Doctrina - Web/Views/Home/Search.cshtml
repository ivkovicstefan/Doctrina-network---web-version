@model HomeSearchViewModel

@{
    ViewBag.Title = "Search results - Doctrina";
}

    <div class="container text-white">
        <h2 class="mt-3 mb-2">Searched for: @Model.Query</h2>
        <h3 class="mt-2 mb-2">Results:</h3>
        @if (@Model.Results.Any())
        {
            @foreach (var profile in Model.Results)
            {
                <div class="text-white bg-gray40 mt-3 mb-3 p-3 row">
                    <div class="col-sm-6 col-md-4 col-lg-3">
                        <img asp-append-version="true" src="~/images/usernoimage.png" class="img-fluid" />
                    </div>
                    <div class="col-sm-6 col-md-8 col-lg-9">
                        <h4>@profile.FirstName @profile.LastName</h4>
                        <h5>@profile.UserName, @profile.Country, @profile.City</h5>
                        @if (profile.UserName != User.Identity.Name)
                        {
                            <a class="btn btn-primary">Send friend request</a>
                        }
                        <a asp-controller="Profile" asp-action="Index" asp-route-userName="@profile.UserName">View profile</a>
                    </div>
                </div>
            }
        }
        else
        {
            <h4 class="mt-2 mb-2">No results found.</h4>
        }
    </div>