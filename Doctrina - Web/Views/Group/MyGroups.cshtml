@model HomeViewModel

@{ 
    ViewBag.Title = "My groups - Doctrina";
}

<div class="container text-white">
    <h2 class="mt-3">My groups</h2>
    <div class="row">

        @foreach (var group in Model.Groups)
        {
        <div class="col-sm-12 col-md-6 col-lg-4 mt-3">
            <div class="group-container">
                <h3><a asp-controller="Group" asp-action="Index" asp-route-id="@group.Id" class="btn btn-link">@group.Name</a></h3>
            </div>
        </div>
        }
        </div>
    <h2 class="mt-3">Explore groups</h2>
    <!-- Groups of my friends -->
</div>